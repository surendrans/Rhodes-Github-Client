<div id="pageTitle">
    <h1>New User</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @user.object %>"/>
        <table>
    		
    		  <tr>
    			  <td class="itemLabel">Username: </td>
    			  <td class="itemValue"><input type="text" name="user[username]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Password: </td>
    			  <td class="itemValue"><input type="text" name="user[password]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Api token: </td>
    			  <td class="itemValue"><input type="text" name="user[api_token]"/></td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>